<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/btnAgregarAlergia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Alergia"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEditarAlergia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Alergia"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEliminarAlergia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Alergia"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnConsultarAlergias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Alergias"
        android:layout_marginBottom="16dp" />
</LinearLayout>
